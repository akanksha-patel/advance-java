  </servlet>
 
  <servlet-mapping>
    <servlet-name>abc3</servlet-name>
	<url-pattern>/register.do</url-pattern>
  </servlet-mapping>
	
  
  <servlet>
    <servlet-name>abc4</servlet-name>
	<servlet-class>controllers.LoginServlet</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>abc4</servlet-name>
	<url-pattern>/login.do</url-pattern>
  </servlet-mapping>


