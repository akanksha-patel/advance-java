    <servlet-name>abc7</servlet-name>
	<url-pattern>/savecity.do</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>abc8</servlet-name>
	<servlet-class>controllers.LogoutServlet</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>abc8</servlet-name>
	<url-pattern>/logout.do</url-pattern>
  </servlet-mapping>


  <!-- ################################ -->
	
  <listener>
	<listener-class>listeners.AppListener</listener-class>
  </listener>
  

</web-app>
